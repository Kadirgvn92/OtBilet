@model List<Passenger>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yolcu Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yolcu Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							yolcu alanıyla ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. Tema bütünlüğü
							için sadece 1 tane hakkımıda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Name @item.Surname</td>
										<td>@item.NationalCardNo</td>
										<td>@item.Luggage</td>
										<td><a href="/About/DeleteAbout/@item.PassengerID" class="btn btn-outline-danger" onclick="deleteContent()">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.PassengerID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkında Bilgileri Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

