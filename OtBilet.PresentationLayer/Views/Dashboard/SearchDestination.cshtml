
@model List<Destination>

@{
    ViewData["Title"] = "SearchDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
	<div class="container-fluid">
		<h4 class="page-title">Otobüs Arama İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Otobüs Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Nereden?</th>
									<th scope="col">Nereye ?</th>
									<th scope="col">Fiyat</th>
									<th scope="col"></th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
								<td >
									<div class="d-flex px-2 py-1">
										<div>
											<img src="/AdminLTE-3.2.0/dist/img/OtBilet.png" class="rounded me-3" style="width:100px;height:100px;" alt="user1">

										</div>
										<div class="d-flex flex-column justify-content-center ml-4">
											<h6 class="mb-0 font-weight-bold  text-s">@item.Price ₺</h6>
										</div>
									</div>
								</td>
								<td class="align-middle" >
									<p class="text-s  mb-0">@item.DepatureDate</p>
								</td>
								<td class="align-middle text-center" >
									<span class="text-s  mb-0">@item.DepartureHour</span>
								</td>
								<td class="align-middle">
									<span class=" text-s  mb-0">@item.Bus.BusType</span>
								</td>
								}
							</tbody>
						</table>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



