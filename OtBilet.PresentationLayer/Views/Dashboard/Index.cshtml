@model ResultDestinationDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Otobüs Arama Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <hr class="horizontal gray-light my-0">
                    <form method="post">
                        <div class="form-group">
                            <label>Nereden ?</label>
                            <select class="form-control form-control-s" asp-for="Departure" asp-items="Html.GetEnumSelectList<Departure>()">
                                <option value="0">Istanbul</option>
                                <option value="1">Ankara</option>
                                <option value="2">Izmir</option>
                                <option value="3">Antalya</option>
                                <option value="4">Bursa</option>
                                <option value="5">Adana</option>
                                <option value="6">Eskisehir</option>
                            </select>

                        </div>
                        <div class="form-group">
                            <label>Nereye ?</label>
                            <select class="form-control form-control-s" asp-for="Arrive" asp-items="Html.GetEnumSelectList<Arrive>()">
                                <option value="0">Istanbul</option>
                                <option value="1">Ankara</option>
                                <option value="2">Izmir</option>
                                <option value="3">Antalya</option>
                                <option value="4">Bursa</option>
                                <option value="5">Adana</option>
                                <option value="6">Eskisehir</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tarih</label>
                            <input type="date" class="form-control form-control-s" asp-for="DepatureDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")" placeholder="Tarihi seçin">
                        </div>
                       
                        <button type="submit" class="btn btn-primary">Otobüs Ara</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

