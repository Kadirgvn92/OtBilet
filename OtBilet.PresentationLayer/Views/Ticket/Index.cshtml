
@model Ticket

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="d-flex justify-content-center">
        <div class="card mt-3 m-2">
            <div class="card-body">
                <div class="container mb-5 mt-3" style="width: 28rem;">
                    <div class="d-flex justify-content-around align-items-center">
                        <img src="https://s3.eu-central-1.amazonaws.com/static.obilet.com/images/partner/330-sm.png" width="240px" height="80px" alt="Metro Turizm">
                        <div class="text-center align-middle mt-3">
                            <p class="text-lg text-secondary font-weight-bold">Metro Turizm</p>
                        </div>

                    </div>
                    <hr />
                    <div class="intro-table">
                        <table>
                            <tbody>
                                <tr>
                                    <th>Kalkış</th>
                                    <th>Varış</th>
                                </tr>
                                <tr>
                                    <td>@Model.Destination.Departure Otogar</td>
                                    <td>@Model.Destination.Arrive Otogar</td>
                                </tr>
                                <tr>
                                    <th>Hareket Zamanı</th>
                                    <th>Koltuk</th>
                                </tr>
                                <tr>
                                    <td>@Model.Destination.DepatureDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR")) @Model.Destination.DepartureHour.ToString(@"hh\:mm")</td>
                                    <td>
                                        <div class="seats">  </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <hr />
                                    </td>
                                </tr>
                                <tr>
                                    <th colspan="2"> Bilet İşlemleri </th>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        Seferin 6 saat öncesine kadar biletinizi iptal edebilir ve değiştirebilirsiniz.
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-3 m-2">
            <div class="card-body">
                <div class="container mb-5 mt-3" style="width: 30rem;">
                    <div class="d-flex justify-content-around align-items-center">
                        <img src="/AdminLTE-3.2.0/dist/img/OtBilet.png" width="80px" height="80px" alt="Metro Turizm">
                        <div class="text-center align-middle mt-3">
                            <p class="text-lg text-secondary font-weight-bold">İletişim Bilgileri</p>
                        </div>
                    </div>
                    <hr />
                    <div class="intro-table">
                        <form>
                            <div class="form-group">
                                <label>Mail Adresi</label>
                                <div class="input-group mb-3">

                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    <input type="email"  class="form-control" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Ad Soyad </label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="email" class="form-control" placeholder="Ad Soyad">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>TC Kimlik No</label>
                                <div class="input-group mb-3">

                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                    </div>
                                    <input type="email" class="form-control" placeholder="TC Kimlik No">
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Telefon Numarası</label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    </div>
                                    <input class="form-control" placeholder="(999) 999-99-99" data-inputmask='"mask": "(999) 999-9999"' data-mask>
                                </div>
                                <!-- /.input group -->
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">
                                    Biletimi ÜCRETSİZ SMS ile alıp, kampanya ve duyuruları ticari elektronik ileti olarak almayı ve kişisel verilerimin pazarlama amacıyla işlenmesini onaylıyorum.
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-3 m-2">
            <div class="card-body">
                <div class="container mb-5 mt-3 px-4" style="width: 30rem;">
                    <div class="d-flex justify-content-around align-items-center">
                        <img src="/AdminLTE-3.2.0/dist/img/cards.png" width="270px" height="80px" alt="Metro Turizm">
                        <div class="text-center align-middle mt-3">
                            <p class="text-lg text-secondary font-weight-bold">Ödeme Bilgileri</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row gx-3">
                        <div class="col-12">
                            <div class="d-flex flex-column">
                                <p class="text mb-1">Kart Sahibi Ad Soyad Name</p>
                                <input class="form-control mb-3" type="text" placeholder="Ad Soyad" value="Kadir GÜVEN">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex flex-column">
                                <p class="text mb-1">Kart Numarası</p>
                                <input class="form-control mb-3" type="text" placeholder="1234 5678 435678">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex flex-column">
                                <p class="text mb-1">Son Kullanma Tarihi</p>
                                <input class="form-control mb-3" type="text" placeholder="MM/YYYY">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex flex-column">
                                <p class="text mb-1">CVV/CVC</p>
                                <input class="form-control mb-3 pt-2 " type="password" placeholder="***">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="btn btn-primary btn-block mb-3">
                                <span class="ps-3 text-lg text-light">Ödemeyi Tamamla</span>
                                <span class="fas fa-arrow-right"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
