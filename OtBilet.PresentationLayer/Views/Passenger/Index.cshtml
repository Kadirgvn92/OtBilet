
@model List<Passenger>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
	<div class="container-fluid">
		<h4 class="page-title">Yolcu Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yolcu Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yolcu alanıyla ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. Tema bütünlüğü
							için sadece 1 tane hakkımıda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">TC Kimlik</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Telefon</th>
									<th scope="col">Bagaj Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NationalCardNo</td>
										<td>@item.Name @item.Surname</td>
										<td>@item.PhoneNumber</td>
										@if (item.Luggage)
										{
											<td>Bagaj Var</td>
										}else
										{
											<td>Bagaj Yok</td>
										}
										<td><a href="/Passanger/DeleteAbout/@item.PassengerID" class="btn btn-outline-danger" onclick="deleteContent()">Sil</a></td>
										<td><a href="/Passanger/UpdateAbout/@item.PassengerID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Passanger/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkında Bilgileri Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


